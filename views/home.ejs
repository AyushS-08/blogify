<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>My Blog</title>
    <style>
/* Reset some default styles */
body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    background-color: #f8f9fa;
    color: #333;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 1200px;
    margin: 20px auto; /* Adjusted margin for better centering */
    padding: 20px;
}

.row-cols-4 {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: space-between; /* Distribute cards evenly */
}

.col {
    flex: 0 0 calc(25% - 20px); /* Adjusted column width with gap */
    max-width: calc(25% - 20px); /* Ensure max-width is less than flex-basis for consistent sizing */
}

.card {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    transition: transform 0.3s ease; /* Smooth hover effect */
    width: 100%; /* Ensure cards take full width initially */
}

.card:hover {
    transform: translateY(-5px); /* Lift card on hover */
}

.card-img-top {
    height: 200px; /* Set fixed height for all images */
    width: 100%; /* Ensure image fills container */
    object-fit: cover;
    border-bottom: 1px solid #ddd;
}

.card-body {
    padding: 15px;
}

.card-title {
    font-size: 1.2rem;
    margin-bottom: 10px;
}

.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
    color: #fff;
    text-decoration: none;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

.btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}

/* Responsive Design */
@media (max-width: 992px) {
    .col {
        flex: 0 0 calc(50% - 20px); /* Two columns per row on medium screens */
        max-width: calc(50% - 20px);
    }
}

@media (max-width: 768px) {
    .col {
        flex: 0 0 calc(100% - 20px); /* Single column per row on small screens */
        max-width: calc(100% - 20px);
    }
}
    </style>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
        <div class="row row-cols-4">
            <% blogs.forEach(blog => { %>
            <div class="col">
                <div class="card">
                    <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover Image">
                    <div class="card-body">
                        <h5 class="card-title"><%= blog.title %></h5>
                        <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>
